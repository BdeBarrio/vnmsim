header
  #logo
  #controls(ng-controller='controlsCtrl')
    ul
      li.tooltip(
          ng-click='(!sim.status || sim.status == 3) && run(1)',
          ng-class="{ 'disabled': sim.status == 2, 'active': sim.status == 1 }"
        )
        span.tooltiptext(translate="RUN")
        svg
          polygon(points='0 0,15 7.5,0 15')
      li.tooltip(
          ng-click='(!sim.status || sim.status == 3) && run(2)',
          ng-class="{ 'disabled': sim.status == 1, 'active': sim.status == 2 }"
        )
        span.tooltiptext(translate="STEP")
        svg
          polygon(points='0 0,14 7.5,14 0,15 0,15 15,14 15,14 7.5,0 15')
      li.tooltip(
          ng-click='(sim.status == 1 || sim.status == 2) && pause()',
          ng-class="{ 'disabled': !sim.status, 'active': sim.status == 3 }"
        )
        span.tooltiptext(translate="PAUSE")
        svg
          polygon(points='0 0,6 0,6 15,0 15')
          polygon(points='9 0,15 0,15 15,9 15')
      li.tooltip(
          ng-click='sim.status && stop()',
          ng-class="{ 'disabled': !sim.status }"
        )
        span.tooltiptext(translate="STOP")
        svg
          polygon(points='0 0,15 0,15 15,0 15')
